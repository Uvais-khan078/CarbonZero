@{
    ViewData["Title"] = "Super Admin Dashboard";
    var message = TempData["ClearDataMessage"] as string;
}

<h2 class="text-3xl font-bold mb-6 text-center text-red-900 drop-shadow-lg tracking-wide">Super Admin Dashboard</h2>

@if (!string.IsNullOrEmpty(message))
{
    <div class="mb-4 p-4 bg-green-200 text-green-800 rounded">
        @message
    </div>
}

<form method="post" asp-controller="Home" asp-action="ClearData" onsubmit="return confirm('Are you sure you want to clear all user and history data? This action cannot be undone.');">
    <button type="submit" class="bg-red-700 text-white font-semibold py-3 px-8 rounded hover:bg-red-800 transition duration-300">
        Clear All User and History Data
    </button>
</form>

<div class="mt-6 text-center">
    <a asp-controller="Home" asp-action="Index" class="text-red-700 hover:underline">
        Logout and Return to Home
    </a>
</div>
