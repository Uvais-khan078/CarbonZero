@model List<CarbonZero.Models.SessionHistory>

@{
    ViewData["Title"] = "Plant History";
}

<h2 class="text-3xl font-bold mb-6 text-center text-green-900 drop-shadow-lg tracking-wide">Plant History</h2>

<table class="min-w-full bg-white border border-green-300 rounded-lg shadow-md">
    <thead>
        <tr class="bg-green-100 text-green-900">
            <th class="py-3 px-6 text-left">Login Time</th>
            <th class="py-3 px-6 text-left">Logout Time</th>
            <th class="py-3 px-6 text-left">Energy Generated (kWh)</th>
            <th class="py-3 px-6 text-left">CO2 Saved (kg)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr class="border-t border-green-200">
                <td class="py-3 px-6">@session.LoginTime.ToString("g")</td>
                <td class="py-3 px-6">@((session.LogoutTime != null) ? session.LogoutTime.Value.ToString("g") : "Active")
                </td>
                <td class="py-3 px-6">@session.EnergyGenerated.ToString("N2")</td>
                <td class="py-3 px-6">@session.CO2Saved.ToString("N2")</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-6 text-center">
    <a asp-controller="Home" asp-action="Dashboard"
        class="inline-block bg-green-700 text-white font-semibold py-2 px-6 rounded hover:bg-green-800 transition duration-300">
        Back to Dashboard
    </a>
</div>
