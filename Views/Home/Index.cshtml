@{
    ViewData["Title"] = "Home Page";
}

<section
    class="min-h-[70vh] flex flex-col justify-center items-center bg-gradient-to-r from-green-50 via-white to-green-100 p-12 rounded-3xl shadow-lg max-w-5xl mx-auto">
    <h1 class="text-6xl font-extrabold text-green-900 mb-6 text-center drop-shadow-lg tracking-wide">Welcome to
        CarbonZero</h1>
    <p class="text-xl text-gray-700 mb-10 text-center max-w-4xl leading-relaxed font-light">
        Discover how to build modern, performant web applications with <a href="https://learn.microsoft.com/aspnet/core"
            class="text-green-800 underline hover:text-green-900 font-semibold transition-colors duration-300">ASP.NET
            Core</a>.
    </p>
    <div class="flex items-center gap-6">
        <span
            class="inline-flex items-center gap-3 text-3xl font-bold text-green-700 bg-green-100 px-8 py-4 rounded-2xl shadow-md border border-green-300 hover:bg-green-200 transition duration-300 ease-in-out transform hover:-translate-y-1">
            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            Tailwind CSS is Working in CarbonZero!
        </span>
    </div>
</section>